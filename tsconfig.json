{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        "packages/**/*"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "esm": true
    }
}
